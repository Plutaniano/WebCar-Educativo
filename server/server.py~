from flask import Flask, render_template, request
import requests

app = Flask(__name__)

arduino_addr = '127.0.0.1'
arduino_port = 5000

@app.route('/')
def index():
    return render_template('index.html')

@app.route('/bind')
def bind():
    arduino_addr = request.remote_addr
    return arduino_addr

@app.route('/cmd')
def move():
    cmdname = request.args.get('cmdname')
    cmdstatus = request.args.get('cmdstatus')
    r = requests.get(f'{arduino_addr}:{arduino_port}/?cmdname={cmdname}&cmdstatus={cmdstatus}')
    return r.status_code

app.run()
